<UserControl x:Class="SLN_Prism.Views.MD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:SLN_Prism.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Button Content="Click Me" Command="{Binding UpdateCommand}"
              Margin="10,10,10,10"
              Width="150" Height="50"/>
            <Button Content="AllCommand" Command="{Binding AllCommand}"
              Margin="10,10,10,10"
              Width="150" Height="50"/>
            <TextBlock Text="{Binding Message}" FontSize="24"  
             HorizontalAlignment="Center"
             VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
